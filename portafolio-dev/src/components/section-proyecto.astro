---
import SectionContainer from "./SectionContainer.astro";
import Project from "../icons/project.astro";
import Projects from "./projects.astro";
import Casco from "../icons/casco.astro";
---

<SectionContainer id="proyecto">
  <h2 class="text-2xl font-semibold mb-6 flex gap-x-3 items-center">
    <Project class="size-19" /> PROYECTOS
    <a
      href="/projects"
      
      class="inline-flex items-center justify-center p-0.5 mb-2 me-2 overflow-hidden text-sm font-medium text-gray-900 rounded-lg group bg-gradient-to-br from-purple-500 to-pink-500 group-hover:from-purple-500 group-hover:to-pink-500 hover:text-white dark:text-white focus:ring-4 focus:outline-none focus:ring-purple-200 dark:focus:ring-purple-800"
    >
      <span
        class="flex items-center px-5 py-2.5 transition-all ease-in duration-75 bg-white dark:bg-gray-900 rounded-md group-hover:bg-opacity-0 "
      >
        VER MAS
        <Casco class="w-5 h-5 ml-2" />
      </span>
    </a>
  </h2>
  <Projects />
</SectionContainer>
