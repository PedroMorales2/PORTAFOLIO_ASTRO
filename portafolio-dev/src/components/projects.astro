---
import NextJs from "../icons/next.astro";
import Html from "../icons/html.astro";
import Flask from "../icons/flask.astro";
import Github from "../icons/github.astro";
const TAGS = {
  NEXT: {
    name: "Next.js",
    color: "bg-black text-white ",
    icon: NextJs,
  },
  HTML: {
    name: "HTML",
    color: "bg-white text-blue-500",
    icon: Html,
  },
  FLASK: {
    name: "Flask",
    color: "bg-black text-white",
    icon: Flask,
  },
};
const PROJECTS = [
  {
    title: "Proyecto de compra y venta de ropa",
    description:
      "Fue elaborado el año 2024 en el curso llamada desarrollo de aplicaciones web, en el cual se utilizo flask",
    link: "https://pedro13morales17.pythonanywhere.com/index",
    github: "https://github.com/PedroMorales2/DAW",
    imageConfig: "/projects/primera_imagen.jpg",
    tags: [TAGS.HTML, TAGS.FLASK],
  },
];
---

{
  PROJECTS.map((project) => (
    <article class="hover:scale-100 transition">
      <div class="flex items-center space-x-10">
        <h3 class="text-2xl font-semibold text-yellow-200 mb-2">
          {project.title}
        </h3>
        <a
          href={project.link}
          target="_blank"
          class="text-gray-900 bg-white border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-100 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700 dark:hover:border-gray-600 dark:focus:ring-gray-700"
        >
          <span class="">
            Vista Previa <span class="text-pretty">→</span>
          </span>
        </a>
      </div>
      <p class="text-lg mb-4 text-pretty">{project.description}</p>
      <div class="flex items-center space-x-1 my-2">
        <h3>SUBIDO EN:</h3>
        <a
          href={project.github}
          target="_blank"
          class="w-[50px] h-[50px] rounded-full bg-white dark:bg-gray-900 flex items-center justify-center shadow-lg hover:shadow-2xl hover:-translate-y-2 transition-all duration-300 ease-in-out transform"
        >
          <Github class="size-5 text-center" />
        </a>
      </div>
      <ul class="flex gap-x-2 flex-row">
        {project.tags.map((tag) => (
          <li>
            <span
              class={`flex gap-x-2 rounded-full text-xs  ${tag.color} py-2 px-1`}
            >
              <tag.icon class="size-5 text-center" />

              {tag.name}
            </span>
          </li>
        ))}
      </ul>
      <img
        class="rounded shadow-2xl shadow-white/10 mt-5"
        src={project.imageConfig}
        alt={`Captura de pantalla`}
      />
    </article>
  ))
}
